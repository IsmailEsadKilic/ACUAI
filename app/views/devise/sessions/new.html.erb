<h2 class="form-header">Log in</h2>

<div class="login-form-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-input", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-input", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-remember">
        <%= f.check_box :remember_me, class: "form-checkbox" %>
        <%= f.label :remember_me, class: "form-label-checkbox" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit "Log in", class: "btn-login" %>
    </div>
  <% end %>

  <div class="form-links">
    <%= render "devise/shared/links" %>
  </div>
</div>

<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <% if post.user %>
      <%= link_to post.user.name, user_profile_path(post.user) %>
    <% else %>
      Anonymous
    <% end %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>

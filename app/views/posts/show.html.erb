<div class="container">
  <%= render @post %>
  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Back to posts", posts_path %>
    <%= button_to "Destroy this post", @post, method: :delete %>
  </div>
</div>

<div class="container">
  <h2>Comments</h2>
  <%= render 'comments/form', post: @post %>
  <% @comments.each do |comment| %>
    <%= render comment, post: @post %>
  <% end %>
</div>

<div class="comment-<%= comment.id %> container" style="border: 1px solid white; padding: 1em; margin: 1em">
  <%= comment.user.name %>
  <span> Posted <%= time_ago_in_words(comment.created_at) %> ago</span>
  <% if current_user == comment.user %>
  <div class="button-group float-end">
    <%= button_to "Delete", [post, comment], class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
  <% end %>
    <hr>
  <div class="comment-body">
    <%= comment.body %>
  </div>
</div>